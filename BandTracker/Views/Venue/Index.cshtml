<!DOCTYPE html>
@{
  Layout = "_Layout";
}
<html>
  <head>
    <meta charset="utf-8">
    <title>Venue Home</title>
  </head>
  <body>
    <h1>Band Tracker</h1>
    <hr/>
    <h2>Venues:</h2>
    @if (Model.Count != 0)
    {
      <ul>
        @foreach (var venue in Model)
        {
          <li><a href="/venue/@venue.GetId()">@venue.GetName()</a></li>
        }
      </ul>
    }
    <p><a href="/venue/new">Add A New Venue</a></p>
    <p><a href="/venue/delete">Delete A Venue</a></p>
    <p><a href="/venue/update">Update A Venue</a></p>
    <p><a href="/">Return To HomePage</a></p>
  </body>
</html>
