<!DOCTYPE html>
@{
  Layout = "_Layout";
}
<html>
  <head>
    <meta charset="utf-8">
    <title>Home Band</title>
  </head>
  <body>
    <h1>Band Tracker</h1>
    <hr />
    <h2>Bands:</h2>
    @if (Model.Count != 0)
    {
      <ul>
        @foreach (var band in Model)
        {
          <li><a href='/band/@band.GetId()'>@band.GetName()</a></li>
        }
      </ul>
    }
    <p><a href="/band/new">Add new band</a></p>
    <p><a href="/">Return Home</a></p>
  </body>
</html>
